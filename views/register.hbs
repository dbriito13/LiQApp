{{!< main}}

<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="card p-4 shadow" style="min-width: 350px; max-width: 400px; width: 100%;">
    <h1 class="card-title text-center mb-4">Register</h1>

    <form method="POST" action="/auth/register">

      <!-- Email -->
      <div class="mb-3">
        <label class="form-label" for="email">Email</label>
        <input
          id="email"
          type="email"
          name="email"
          value="{{email}}"
          class="form-control {{#if errors.email}}is-invalid{{/if}}"
          required 
        >
        {{#if errors.email}}
          <div class="invalid-feedback">{{errors.email}}</div>
        {{/if}}
      </div>

      <!-- Password -->
      <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input
          id="password"
          type="password"
          name="password"
          class="form-control"
          required
          minlength="8"
          title="Password must be at least 8 characters"
        >
      </div>

      <!-- Name -->
      <div class="mb-3">
        <label class="form-label" for="username">Username</label>
        <input
          id="username"
          type="text"
          name="username"
          value="{{username}}"
          class="form-control {{#if errors.username}}is-invalid{{/if}}"
          required          
        >
        {{#if errors.username}}
          <div class="invalid-feedback">{{errors.username}}</div>
        {{/if}}
      </div>

      <button type="submit" class="btn btn-primary w-100">Register</button>
    </form>

    <p class="text-center mt-3 mb-0">
      Already have an account? <a href="/auth/login">Login here</a>
    </p>
  </div>
</div>
